<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="xyz.hyffer.onemessage_server.storage.mapper.ContactMapper">
    <select id="getContacts" resultType="Contact">
        select * from contact order by lastMsgTime desc
        <if test="limit != 0">
            limit #{limit}
        </if>
    </select>

    <select id="searchContacts" resultType="Contact">
        <bind name="search_pattern" value="'%' + key + '%'"/>
        select * from contact where remark like #{search_pattern}
        <if test="limit != 0">
            limit #{limit}
        </if>
    </select>

    <select id="findContactByCID" resultType="Contact">
        select * from contact where _CID=#{_CID}
    </select>

    <select id="findContactById" resultType="Contact">
        select * from contact where id=#{id}
    </select>

    <insert id="addContact" parameterType="Contact"
            useGeneratedKeys="true" keyProperty="_CID">
        insert into contact (type, id, name, remark) value
            (#{type}, #{id}, #{name}, #{remark})
    </insert>

    <update id="updateContact" parameterType="Contact">
        update contact set name=#{name}, remark=#{remark}
        where _CID=#{_CID}
    </update>

    <update id="updateContactStatus" parameterType="Contact">
        update contact set total=#{total}, unread=#{unread}, pinned=#{pinned}, lastMsgTime=#{lastMsgTime}
        where _CID=#{_CID}
    </update>
</mapper>